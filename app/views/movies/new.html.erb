<h2>New Movie</h2>
<%= form_for @movie do |f| -%>
  <p>
    <%= f.label :title, "Title" %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :format, "Format" %> <br>
    <%= f.select :format, 
          [["DVD", :dvd],["VHS", :vhs],["Online", :online],["Other", :other]] %>
  </p>
  <p>
    <%= f.label :description, "Description" %> <br>
    <%= f.text_area :description %>
  </p>
  <%= f.submit %>
<% end -%>
