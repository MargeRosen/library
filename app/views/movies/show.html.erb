<h3>Movie Details</h3>
<div>
  <table>
    <tr>
      <th align="right">Title:</th>
      <td><%= @movie.title %></td>
    </tr>
    <tr>
      <th>Format:</th>                    
      <td><%= @movie.format %></td>
    </tr>
  </table>
  <p><%= simple_format(@movie.description) %></p>
</div>
<div>
    <table>
      <tr>
        <th>Cast</th>
        <th><%= link_to "Add Cast", new_involvement_path %></th>
        <th></th>
      </tr>
      <% @movie.people.uniq.each do |person| %>
        <tr>
          <td><%= link_to person.name, person_path %></td>
          <% person.involvements.each  do |i| %>
            <td><%= i.role %>
            (<%= link_to "x", involvement_path(i), 
                  method: "delete", confirm: "Are you sure?" %>)</td>
          <% end -%>
        </tr>
      <% end -%>
    </table>
</div>
</div>
<br>
<footer>
<%= link_to "All Movies", movies_path %> | 
<%= link_to "Edit Movie", edit_movie_path %> |
<%= link_to "Remove Movie", movie_path,
        method: "delete", confirm: "Are you sure?" %>
</footer>

